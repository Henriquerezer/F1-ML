                                 ['Grid', 'AverageSpeed',
                                  'DifferenceGridPosition', 'WonLastRace',
                                  'WonLast2Races', 'WonLast3Races',
                                  'WonLast4Races', 'WonLast5Races',
                                  'WonLast6Races', 'WonLast7Races',
                                  'WonLast10Races', 'Top3Last5Races',
                                  'Top5Last10Races']),
                                ('cat',
                                 OneHotEncoder(drop='first',
                                               handle_unknown='ignore'),
                                 ['CircuitID', 'country', 'ConstructorName',
                                  'constructorId', 'ConstructorNationality',
                                  'DriverID', 'DriverName', 'DriverNationality',
                                  'Nationality', 'Status'])])